<section>
	<header>
		<h2>Blog posts</h2>
	</header>
	<main>
		<ul class="collection">
		{%- for post in collections.posts | reverse -%}
			{% if (loop.index <= 5) %}
				<li>
					<a href="{{post.url}}">
						{{ post.data.title }}
					</a>
					<br/>
					<time>{{post.data.date.toLocaleDateString() }}</time>
				</li>
			{% endif %}
		{%- endfor -%}
		</ul>

		<div style="margin-top: 2rem">
			<a href="/posts">View All Posts</a>
		</div>
	</main>

</section>

<section>
	<header>
		<h2>Last mumble</h2>
	</header>

	<main>
		{%- for post in collections.mumbles | reverse -%}
			{% if (loop.index <= 1) %}
					{{ post.content | safe }}			
					<time>
						{{post.data.date.toLocaleString() }}
					</time>
			{% endif %}
		{%- endfor -%}
		</ul>
	</main>
</section>

