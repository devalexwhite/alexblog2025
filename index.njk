<section style="margin-bottom: 3rem;">
	<div class="adventure" hx-trigger="load" hx-get="/adventure/1-intro" hx-swap="outerHTML">
		<h3>Adventure Game</h3>
		<p>No JavaScript? No problem!</p>
		<div>
			<a href="/adventure/1-intro">Play the game here without JS.</a>
		</div>
	</div>
</section>


<section style="margin-bottom: 3rem;">
	<h3>Last Mumble</h3>
	<ul class="mumbles"> 
	{%- for post in collections.mumbles | reverse -%}
		{% if (loop.index <= 1) %}
		  <li>
				<time>{{post.data.date.toLocaleString() }}</time>
				{{ post.content | safe }}
		
		  </li>
		{% endif %}
	{%- endfor -%}
	</ul>
</section>

<section style="margin-bottom: 3rem;">
	<h3>Recent Posts</h3>
	<ul class="collection">
	{%- for post in collections.posts | reverse -%}
		{% if (loop.index <= 5) %}
			<li>
				<a href="{{post.url}}">
					{{ post.data.title }}
				</a>
				<br/>
				<time>{{post.data.date.toLocaleDateString() }}</time>
			</li>
		{% endif %}
	{%- endfor -%}
	</ul>
	<div style="margin-top: 2rem">
		<a href="/posts">View All Posts</a>
	</div>
</section>