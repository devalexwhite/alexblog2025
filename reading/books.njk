<header style="margin-bottom: 3rem;">
	<h1>Reading List</h1>
	<p>In progress and finished books.</p>
</header>

<section>
	<h3>What I'm reading now</h3>
	<ul class="collection">
	{%- for book in collections.inProgressBooks -%}
		<li>
			<div>{{ book.data.title }}</div>
			<div><small>{{book.data.book_author}}</small></div>
		</li>
	{%- endfor -%}
	</ul>
</section>

<section>
	<h3>Finished</h3>
	<ul class="collection">
	{%- for book in collections.finishedBooks -%}
		<li>
			<a href="{{ book.url }}">{{ book.data.title }}</a>
			<div>
				{% for i in range(0, book.data.rating) -%}
					★
				{%- endfor %}
				{% for i in range(0, 5 - book.data.rating) -%}
					☆
				{%- endfor %}
			</div>
			<div><small>{{book.data.book_author}}</small></div>
		</li>
	{%- endfor -%}
	</ul>
</section>